<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_welcome">

    <fragment
        android:id="@+id/navigation_welcome"
        android:name="my.significs.gep.faceid.ui.welcome.SplashScreen"
        android:label="@string/title_welcome"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_navigation_welcome_to_navigation_login"
            app:destination="@id/navigation_login"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@id/navigation_welcome"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_login"
        android:name="my.significs.gep.faceid.ui.welcome.LoginFragment"
        android:label="@string/title_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_navigation_login_to_camera"
            app:destination="@id/navigation_dashboard"
            app:launchSingleTop="false"
            app:popUpTo="@id/navigation_login"
            app:popUpToInclusive="true" />
<!--        <action-->
<!--            android:id="@+id/action_navigation_login_to_navigation_home"-->
<!--            app:destination="@id/navigation_home"-->
<!--            app:launchSingleTop="false"-->
<!--            app:popUpTo="@id/navigation_login"-->
<!--            app:popUpToInclusive="true" />-->
    </fragment>

    <fragment
        android:id="@+id/navigation_home"
        android:name="my.significs.gep.faceid.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_dash_to_home"
            app:destination="@id/navigation_home"
            app:launchSingleTop="false"
            app:popUpToInclusive="true" />
<!--        <action-->
<!--            android:id="@+id/action_navigation_home_to_camera"-->
<!--            app:destination="@id/navigation_camera"-->
<!--            app:launchSingleTop="false"-->
<!--            app:popUpTo="@id/navigation_home"-->
<!--            app:popUpToInclusive="true" />-->
    </fragment>

    <fragment
        android:id="@+id/navigation_camera"
        android:name="my.significs.gep.faceid.ui.home.CaptureCameraFragment"
        android:label="@string/camera_capture"
        tools:layout="@layout/fragment_capture_image" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="my.significs.gep.faceid.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_dash_to_home"
            app:destination="@id/navigation_home"
            app:launchSingleTop="false"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="my.significs.gep.faceid.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>